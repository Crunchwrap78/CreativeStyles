<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>

<p>
<strong>Details</strong> <br>
<%= @event.description %>
</p>

<div class = "btn waves-effect waves-light">
<p>
<strong>Link </strong> <br>
<a href="<%= @event.link %>"><%= @event.name %></a>
</p>
</div>

<% if current_user %>
<%= link_to 'Edit', edit_user_event_path(@user, @event), class: "btn waves-effect waves-light" %>
<%= link_to 'Back', user_events_path, class: "btn waves-effect waves-light" %>
<%end%>
