


<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card playlist-text black-text darken-1">
        <%= form_for [@user, @event] do |f| %>
          <% if @event.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
              <ul>
              <% @event.errors.full_messages.each do |event| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :start_time %><br>
          <%= f.datetime_select :start_time %>
        </div>
        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </div>
        <div class="field">
          <%= f.label :link %><br>
          <%= f.text_field :link %>
        </div>
        <div class="field">
          <%= button_tag(type: "submit", class: "btn waves-effect waves-light") do %>
                <i class="mdi-social-person-add"> New Event</i>
                <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
