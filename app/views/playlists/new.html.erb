<div class="container">
<div class="row">
  <h4 class="header center teal-text text-lighten-2">To search for a playlist enter a genre or artist </h4><br><br>
</div>

      <div class="row">
        <div class="col s12">
          <div class="card playlist-text darken-1">
            <div class="card-content white-text">
              <span class="card-title">
              <%= form_tag new_user_playlist_path, :method => 'get' do %>
              <%= text_field_tag :playlist_user_input, params[:playlist_user_input] %>
               <%= button_tag(type: "submit", class: "btn waves-effect waves-light") do %>
              <i class="mdi-action-search"> Search</i>
              <% end %>
              <% end %>
        </span>
        <% if @playlist != nil && params[:playlist_user_input] != nil%>
               <iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%=@playlist[:soundcloud_id]%>&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
            </div>
            <div class="card-action">



        <%= form_tag({controller: "playlists", action: "create"}, method: "post") do %>
              <%= hidden_field_tag  "playlist[soundcloud_id]", @playlist[:soundcloud_id] %>
              <%= hidden_field_tag  "playlist[name]", @playlist[:name] %>

               <%= button_tag(type: "submit", class: "btn waves-effect waves-light") do %>
              <i class="mdi-content-save"> Save</i>
              <% end %>
             <% end %>
          <% end %>
            </div>
          </div>
        </div>
      </div>
</div>
